<div claas="jumbotron">
  <h1>Workout Lounge</h1>
  <p>Show off your workouts.</p>
</div>
<div>
  <h2>List of Members</h2>
  <%= will_paginate @athletes, renderer: BootstrapPagination::Rails, class: "pull-left paginate" %>
</div>
<div>
  <% @athletes.each do |athlete| %>
  <div>
    <%= athlete.full_name %>
    <% if current_user %>
      <%= link_to "Follow", friendships_path(friend_id: athlete.id), method: :post, class: "btn" unless current_user.follows_or_same?(athlete) %>
    <% end %>    
  </div>
  <% end %>
</div>
